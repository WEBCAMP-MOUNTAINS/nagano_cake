
  <div class="row">
    
    <div class="col-2"></div>
    <div class="col-7">
      <h1>ジャンル追加</h1>
      <%=form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <h2>ジャンル名</h2>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success offset-1" %>
      <% end %>
      <table>
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td>
            <%= genre.name %>
           </td>
           <td>　　　
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
         <% end %>
           </td>
         </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3"></div>
  </div>
