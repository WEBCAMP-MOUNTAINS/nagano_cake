<div class="continer">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-7">
      <h4 class = "col-3 text-center" style = "background-color:lightgray">会員一覧</h4>
          <body>
            <table class= "table table-hover">
              <thead class = "thead-light">
              <tr>
                <th>会員id</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.full_name, admin_customer_path(customer)%></td>
                <td><%= customer.email %></td>
              </tr>
          <% end %>
          <%= paginate @customers %>
          </table>
          </body>
    </div>
    <div class="col-3"></div>
  </div>
</div>