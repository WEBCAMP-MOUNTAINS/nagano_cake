<div class="continer">
  <div class="row">
    <div class="col-3">
    </div>
      <div class="col-7">
      <h2><%= @customer.full_name %>さんの会員詳細</h2>
      <table class="show-table">
        <tr>
           <th>会員id</th>
           <td><%= @customer.id %></td>
        </tr>
        <tr>
           <th>氏名</th>
           <td><%= @customer.full_name %></td>
        </tr>
        <tr>
           <th>フリガナ</th>
           <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
           <th>郵便番号</th>
           <td> <%= @customer.postal_code %></td>
        </tr>
        <tr>
           <th>住所</th>
           <td><%= @customer.address %></td>
        </tr>
        <tr>
           <th>電話番号</th>
           <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
           <th>メールアドレス</th>
           <td><%= @customer.email %></td>
        </tr>
        <tr>
           <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == false %>
            <font color = "green"><strong>有効</strong></font>
          <% else %>
            <font color = "red"><strong>退会</strong></font>
          <% end %>
          </td>
        </tr>
        </table>
       <%= button_to "編集する", edit_admin_customer_path(@customer) , method: :get %>
      <%= button_to "注文一覧画面を見る", admin_order_path(@customer) , method: :get %>
     </div>
    <div class="col-3"></div>
  </div>
</div>

