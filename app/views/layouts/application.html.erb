<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div>
      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li class="ml-3">
            <%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "商品一覧", items_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "カート", cart_items_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3 mr-1">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-info" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="ml-3">
            <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-info" %>
          </li>

          <li class="ml-3">
            <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3 mr-1">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-info" %>
          </li>
        <% else %>
          <li class="ml-3">
            <%= link_to "About", about_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "商品一覧", items_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3">
            <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-info" %>
          </li>
          <li class="ml-3 mr-1">
            <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-info" %>
          </li>
        <% end %>
      </ul>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
