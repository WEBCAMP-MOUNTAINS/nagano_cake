<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/"><span>nagano cake</span></a>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", customer_path(current_customer.id), class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary btn-sm" %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>

              <li>
                <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary btn-sm" %>
              </li>
            <% else %>
              <li>
                <%= link_to "About", about_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary btn-sm" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
