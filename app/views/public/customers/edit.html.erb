<h2>会員情報編集</h2>

<table>
  <thead>
<div>
    <%= form_with model:@customer, local:true do |f| %>
    <label class="form-label">氏名</label>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
    <p>
    <label class="form-label">フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true  %>
    </p>
    <label class="form-label">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true %>
    <p> <label class="form-label">住所</label>
    <%= f.text_field :address , autofocus: true %>
    </p>
    <p> <label class="form-label">電話番号</label>
    <%= f.text_field :phone_number , autofocus: true %>
    </p>
    <p> <label class="form-label">メールアドレス</label>
    <%= f.text_field :email , autofocus: true %>
　　</p>
　　<%= f.submit "変更内容を保存" %>
    <%= link_to "退会", unsubscribe_customers_path %>
<% end %>
</div>
  </thead>
</table>