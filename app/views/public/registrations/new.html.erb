<!--Sign up-->



<div class="box1">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <h1>新規登録会員</h1>
      
      <div class="box-name">
        <%= f.label "名前" %><%= f.label "(姓)" %><br><%= f.text_field:first_name, autofocus: true, autocomplete: "last_name" %><br>
        <%= f.label "(名)" %><br><%= f.text_field:last_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    
      <div class="box-name-kana">
        <%= f.label "フリガナ" %><%= f.label "(セイ)" %><br>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana" %><br>
        <%= f.label "(メイ)" %><br>
        <%= f.text_field  :last_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    
    
      <div class="box-email">
        <%= f.label "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>
    
      <div class="box-postal-code">
        <%= f.label " 郵便番号（ハイフンなし）" %><br>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%>
      </div>
    
    
      <div class="box-address">
        <%= f.label "住所" %><br>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    
      <div class="box-phone-number">
        <%= f.label  "電話番号（ハイフンなし）" %><br>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    
      <div class="box-password">
        <%= f.label "パスワード（6文字以上）" %><br>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="box-password-confirmation">
        <%= f.label "パスワード（確認用）" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="box-login">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    　<div class="box-newusr">
        <p><span>------------</span> 既に登録されていますか？ <span>------------</span></p>
        <%= link_to "ログイン", new_customer_session_path %>
      </div>
