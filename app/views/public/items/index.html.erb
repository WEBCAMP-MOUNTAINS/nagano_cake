<h2>商品一覧</h2>
<% @items.each do |item| %>
  <%= link_to item_path(item) ,style: "color: black;", data: {"turbolinks" => false} do %>
    <%= attachment_image_tag item, :image, format: 'jpeg', size: "40x40" %><br>
    <%= item.name %><br>
    ¥<%= item.taxin_price.to_s(:delimited, delimiter: ',') %>
  <% end %>
<% end %>
<%= paginate @item %>