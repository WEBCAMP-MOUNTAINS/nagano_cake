<% if @item.sold_out? %>
  <%= form_with url:customer_cart_items_path, model: @cart_items, local:true do |f| %>
      <%= f.hidden_field :item_id, value: @item.id %>
      <%= f.select :quantity, options_for_select((1..20).to_a), {include_blank: "個数選択"}, {class: "form-control rounded"} %>
      <%= f.submit "カートに入れる" %>
  <% end %>
<% else %>