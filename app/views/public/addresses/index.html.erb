

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>配送先登録/一覧</h1>
      <%= form_with model:@address local: true do |f| %>
       <div class = "form-group">
         <%= f.label :郵便番号(ハイフンなし) %>
         <%= f.text_field :postal_code, placeholder: "0000000" %>
       </div>
       <div class="form-group">
         <%= f.label :住所 %>
         <%= f.text_field :address, placeholder: "東京都新宿区西新宿００－００" %>
       </div>
       <div class="form-group">
         <%= f.label :宛名 %>
         <%= f.text_field :name, placeholder: "山田太郎" %>
       </div>
       <div class="action">
         <%= f.submit "新規登録", class: "btn btn-success" %>
       </div>
      <% end %>
      
    </div>
  </div>
</div>

