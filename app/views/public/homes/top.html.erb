<%= render "layouts/slider" %>


<h2>新着商品</h2>
<% if customer_signed_in? %>
ログイン中
<% end %>
<!--商品新規登録一覧挿入-->
<div class="container" style="font-family: 'Noto Sans JP',serif;">
    <div class="row pb-5 pt-5 max-auto">

        <div class="col-sm-12">
          <h2><span class="under-line">新着商品</span></h2>
          <div class="row">

            <% @items.last(4).reverse.each do |item| %>
              <div class="col-sm-3">
                <div class="card">

                  <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                    <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                      <%= attachment_image_tag item, :image, format: 'jpeg', size: "252x200"%><br>
                        <%= item.name %><br>
                        ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
                      <% end %>
                  </div>

                </div>
              </div>
            <% end %>

          </div>

          <div class="text-right">
            <%= link_to "全ての商品を見る >", items_path %>
          </div>
        </div>

    </div>
</div>