<%= render "layouts/slider" %>

<div class="container px-5">
  
  <div class="row justify-content-center">
    <div class="col-md-2.5 ribbon_heading">
      <h3>New Items</h3>
    </div>
  </div>

　<div class="col-md-9 offset-md-1">
    <div class="row item_lists">
      <% @items.last(4).reverse.each do |item| %>
        <div class="col-md-3 item_list">
          <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
            <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
              <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x150" %><br>
              <%= item.name %><br>
              ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
            <% end %>
          </div>
      　</div>
      <% end %>

      <div class="all_item">
        <%= link_to "全ての商品を見る >", items_path %>
      </div>
    </div>
  </div>
</div>